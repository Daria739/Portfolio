
.hero {
    position: relative;
    padding-top: 3%;
    min-height: 650px;
    height: 100vh;
}

.hero__container {
    display: flex;
    flex-direction: column;
    height: 100%;

}

.hero__content {
    flex: .8;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 24%;
}

.hero__bottom-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    padding-bottom: 2%;

    &:after {
    content: "";
    display: block;
    width: 30px;
    height: 30px;
    background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%) no-repeat;
    }

    &:hover:after {
    content: "";
    display: block;
    width: 30px;
    height: 30px;
    background: svg-load('scroll.svg', fill=#5500f2, width=100%, height=100%) no-repeat;
    }

    &:focus:after {
    content: "";
    display: block;
    width: 30px;
    height: 30px;
    background: svg-load('scroll.svg', fill=#5500f2, width=100%, height=100%) no-repeat;
    }

    &:active:after {
    content: "";
    display: block;
    width: 30px;
    height: 30px;
    background: svg-load('scroll.svg', fill=#ae00ff, width=100%, height=100%) no-repeat;
    }

    @include tablets() {
        display: none;
    }

}

.hero__bottom-buttons:hover .scroll-down-button__text {
    color:#5500f2;
    font-weight: bold;
}

.hero__bottom-buttons:active .scroll-down-button__text {
    color:#ae00ff;
    font-weight: bold;
}

.hero__bottom-buttons:focus .scroll-down-button__text {
    color:#5500f2;
    font-weight: bold;
}