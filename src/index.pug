include ./mixins.pug
include ./templates/entry.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        .welcome-section
          section.parallax
            .parallax__layer(data-speed="0.1")
              picture
                source(srcset='../../src/images/content/Sky.jpg', media='(max-width: 1800px)').parallax__img
                source(srcset='../../src/images/content/Sky-desk.jpg',  media='(max-width: 1200px)').parallax__img
                source(srcset='../../src/images/content/Sky-tablets.jpg',  media='(max-width: 768px)').parallax__img
                img(srcset='../../src/images/content/Sky-desk.jpg', alt='Sky').parallax__img

            .parallax__layer(data-speed="0.15")
              picture
                source(srcset='../../src/images/content/Mountain.png', media='(max-width: 1800px)').parallax__img
                source(srcset='../../src/images/content/Mountain-desk.png',  media='(max-width: 1200px)').parallax__img
                source(srcset='../../src/images/content/Mountain-tablets.png',  media='(max-width: 768px)').parallax__img
                img(srcset='../../src/images/content/Mountain-desk.png', alt='Mountain').parallax__img
              
            .parallax__layer(data-speed="0.2")
              picture
                source(srcset='../../src/images/content/Baloon.png', media='(max-width: 1800px)').parallax__img
                source(srcset='../../src/images/content/Baloon.png',  media='(max-width: 1200px)').parallax__img
                source(srcset='../../src/images/content/Baloon-tablets.png',  media='(max-width: 768px)').parallax__img
                img(srcset='../../src/images/content/Baloon.png', alt='Baloon').parallax__img

            .parallax__layer(data-speed="0.25")
              picture
                source(srcset='../../src/images/content/Cloud.png', media='(max-width: 1800px)').parallax__img
                source(srcset='../../src/images/content/Cloud-desk.png',  media='(max-width: 1200px)').parallax__img
                source(srcset='../../src/images/content/Cloud-tablets.png',  media='(max-width: 768px)').parallax__img
                img(srcset='../../src/images/content/Cloud-desk.png', alt='Cloud').parallax__img

            .parallax__layer(data-speed="0.3")
              picture
                source(srcset='../../src/images/content/Man.png', media='(max-width: 1800px)').parallax__img
                source(srcset='../../src/images/content/Man-desk.png',  media='(max-width: 1200px)').parallax__img
                source(srcset='../../src/images/content/Man-tablets.png',  media='(max-width: 768px)').parallax__img
                img(srcset='../../src/images/content/Man-desk.png', alt='Man').parallax__img

            .parallax__layer(data-speed="0")
              picture
                source(srcset='../../src/images/content/Mountain-2.png', media='(max-width: 1800px)').parallax__img
                source(srcset='../../src/images/content/Mountain-2-desk.png',  media='(max-width: 1200px)').parallax__img
                source(srcset='../../src/images/content/Mountain-2-tablets.png',  media='(max-width: 768px)').parallax__img
                img(srcset='../../src/images/content/Mountain-2-desk.png', alt='Mountain').parallax__img

            .parallax__layer(data-speed="0.42")
              picture
                source(srcset='../../src/images/content/White.png', media='(max-width: 1800px)').parallax__img
                source(srcset='../../src/images/content/White-desk.png',  media='(max-width: 1200px)').parallax__img
                img(srcset='../../src/images/content/White-desk.png', alt='White clouds').parallax__img

          section(id="hero-sec").hero
            .container.hero__container
              header.header
                span.logo DM
                
                .header__menu
                  nav.nav
                    ul.nav__list
                      li.nav__item
                        a(href="#hero-sec").nav__link Главная
                      li.nav__item
                        a(href="#about-sec").nav__link Обо мне
                      li.nav__item
                        a(href="#values-sec").nav__link Навыки
                      li.nav__item
                        a(href="#works-sec").nav__link Работы
                      li.nav__item
                        a(href="#reviews-sec").nav__link Отзывы
                      li.nav__item
                        a(href="#form-sec").nav__link Связаться

                .header__links
                  ul.socials
                    li.socials__item
                      a.socials__item-link(href="https://www.instagram.com/daria739" target="_blank")
                        +icon('insta', 'social-icon')
                    li.socials__item
                      a.socials__item-link(href="https://vk.com/dm72690571" target="_blank")
                        +icon('vk', 'social-icon')
                    li.socials__item
                      a.socials__item-link(href="https://github.com/Daria739" target="_blank")
                        +icon('github', 'social-icon')

                .header__menu-burger
                  a(href="#").menu-burger
                    .menu-burger-icon
                      span.menu-global.menu-burger-top
                      span.menu-global.menu-burger-middle
                      span.menu-global.menu-burger-bottom
              
              .hero__content
                h1.user-info
                  span.user-info__desc Личный сайт веб разработчика
                  span.user-info__name Дарья Марченко
              
              .hero__bottom-buttons
                button(type="button").scroll-down-button 
                  span.scroll-down-button__text Скролл

          section(id="about-sec").about
            .container.about__container
              .about__left
                .user
                  .user__avatar
                    +image('content/uMmrjh-M3HA.jpg', 'user-pic', 'myPhoto')
                  
                  .user__data
                    table.user__data-table
                      - 
                        var data = [
                          ['Проживаю', 'Санкт-Петербург'],
                          ['Возраст', '24 года'],
                          ['Родилась', '28 апреля 1995'],
                        ]
                      each row in data
                        tr.user__data-row
                          td.user__data-cell.user__data-cell_one #{row[0]}
                          td.user__data-cell.user__data-cell_two #{row[1]}


              .about__right
                span.about__welcome Привет, меня зовут
                h2.about__username Дарья Марченко

                .about__desc
                  p.about__desc-info Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                  p.about__desc-ps Этот сайт я сделала в рамках обучения в Школе онлайн-образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите как тут всё классно и красиво!

      .triangles
        svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_left
          polygon(points="0,0 0,100 1000,100")
        svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_right
          polygon(points="0,100 1000,100 1000,0")

      .middle-section
        section(id="values-sec").values 
          .container.values__container
            .values__left
              .values__image
                +image('content/bag.png', 'bag-pic', 'bag')
            .values__right
              h2.values__title Чем я могу быть вам полезна
              p.values__desc-text Этот сайт я сделала в рамках обучения в Школе онлайн-образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
              #skills-component
              

              .values__image-tablets
                .values__image
                  +image('content/bag.png', 'bag-pic', 'bag')

        section(id="works-sec").works 
          .container.works__container
            h2.works__title Мои Работы
            .works__content
                #slider-component
                  
      .triangles.triangles-bottom
        svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_left
          polygon(points="0,0 1000,0 1000,100")
        svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_right
          polygon(points="0,0 0,100 1000,0")

      .bottom-section
        section.reviews#reviews
          .container.reviews__container
            .reviews__top-row
              h2.reviews__title Что обо мне говорят
              .reviews__slider-controlls
                button.reviews__slider-controll-left(@click="previous()")
                  +icon('arrow-down', 'arrow-reviews-left')
                button.reviews__slider-controll-right(@click="next()")
                  +icon('arrow-down', 'arrow-reviews-right')
              

            .reviews__content
              flickity(ref="flickity" :options="flickityOptions").reviews__slider-list
                .reviews__slider-item.carousel-cell
                  .reviews__slider-quote
                    .reviews__slider-quote-text Эта девушка проходила обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!
                  cite.reviews__slider-quote-author
                    .reviews__slider-user-pic
                      +image('content/Dmitry.jpg', 'user-pic_reviews', 'Dmitry Kovalchuk')
                    .reviews__slider-user-info
                      span.reviews__slider-user-name Дмитрий Ковальчук
                      span.reviews__slider-user-occ Основатель LoftSchool

                .reviews__slider-item.carousel-cell
                  .reviews__slider-quote
                    .reviews__slider-quote-text Этот код выдержит любые испытания. Только, пожалуйста, не загружайте его на слишком старых браузерах.
                  cite.reviews__slider-quote-author
                    .reviews__slider-user-pic
                      +image('content/Vladimir.jpg', 'user-pic_reviews', 'Vladimir Sabantsev')
                    .reviews__slider-user-info
                      span.reviews__slider-user-name Владимир Сабанцев
                      span.reviews__slider-user-occ Преподаватель

                .reviews__slider-item.carousel-cell
                  .reviews__slider-quote
                    .reviews__slider-quote-text Эта девушка проходила обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!
                  cite.reviews__slider-quote-author
                    .reviews__slider-user-pic
                      +image('content/Dmitry.jpg', 'user-pic_reviews', 'Dmitry Kovalchuk')
                    .reviews__slider-user-info
                      span.reviews__slider-user-name Дмитрий Ковальчук
                      span.reviews__slider-user-occ Основатель LoftSchool

                .reviews__slider-item.carousel-cell
                  .reviews__slider-quote
                    .reviews__slider-quote-text Этот код выдержит любые испытания. Только, пожалуйста, не загружайте его на слишком старых браузерах.
                  cite.reviews__slider-quote-author
                    .reviews__slider-user-pic
                      +image('content/Vladimir.jpg', 'user-pic_reviews', 'Vladimir Sabantsev')
                    .reviews__slider-user-info
                      span.reviews__slider-user-name Владимир Сабанцев
                      span.reviews__slider-user-occ Преподаватель

        section(id="form-sec").form.bottom-section__form
          .container.form__container
            h2.form__title Связаться со мной
            form(action="POST").form__content
              .form__row

                label.form__block
                  span.form__block-title.form__block-title_user Введите ваше имя
                  .form__block-container
                    +icon('user', 'form-icon')
                    input(type="text" placeholder="Дмитрий Ковальчук" required).form__input

                label.form__block
                  span.form__block-title Введите ваш email
                  .form__block-container
                    +icon('envelope', 'form-icon')
                    input(type="text" placeholder="loftschool@study.ru" required).form__input

              .form__row

                label.form__block
                  span.form__block-title.form__block-title_textarea Сообщение к письму
                  .form__block-container.form__block-container_textarea
                    +icon('message', 'form-icon')
                    textarea(placeholder="Требуется ваша помощь в создании сайта. Интересует срок и цена вопроса").form__input_textarea
              
              button(type="submit").form__btn Отправить
          

      footer.footer
        .container.footer__container

          .footer__copyright

            .copyright
              span.copyright__year ©2019
              .copyright__info
                span.copyright__username Марченко Дарья
                span.copyright__desc Личный сайт веб-разработчика

          .footer__data
            .footer__menu
              ul.footer__menu-list
                li.footer__menu-item
                  a(href="#hero-sec").footer__menu-link Главная
                li.footer__menu-item
                  a(href="#about-sec").footer__menu-link Обо мне
                li.footer__menu-item
                  a(href="#values-sec").footer__menu-link Навыки
                li.footer__menu-item
                  a(href="#works-sec").footer__menu-link Работы
                li.footer__menu-item
                  a(href="#reviews-sec").footer__menu-link Отзывы
                li.footer__menu-item
                  a(href="#form-sec").footer__menu-link Связаться
            .footer__data-columns
              .footer__data-col
                p.footer__text Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool
                ul.footer__socials-list.socials.socials_footer
                  li.socials__item.socials__item_rounded
                    a.socials__item-link.socials__item-link_footer(href="https://www.instagram.com/daria739")
                      +icon('insta', 'social-icon')
                  li.socials__item.socials__item_rounded
                    a.socials__item-link.socials__item-link_footer(href="https://vk.com/dm72690571" target="_blank")
                      +icon('vk', 'social-icon')
                  li.socials__item.socials__item_rounded
                    a.socials__item-link.socials__item-link_footer(href="https://github.com/Daria739" target="_blank")
